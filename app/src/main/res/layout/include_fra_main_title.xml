<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/orange_light"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/titleBar_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bar_store_icon" />
        <ImageView
            android:id="@+id/titleBar_shuxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/black_flash" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/titltBar_topC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/titleBar_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black_deep"
                    android:textSize="14sp"
                    tools:text="北京市"
                    android:text="北京市"/>
                <ImageView
                    android:id="@+id/titleBar_city_arrow"
                    android:layout_toRightOf="@+id/titleBar_city"
                    android:src="@drawable/bar_main_city_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/titleBar_position"
                android:layout_below="@+id/titltBar_topC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="车公庄大街五栋大楼"
                tools:text="车公庄大街五栋大楼"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_height="wrap_content"
            android:id="@+id/iv_titleBar_trasition"
            android:layout_marginRight="10dp"
            tools:src="@drawable/place_gridview"
            android:layout_width="wrap_content"/>

    </LinearLayout>


</RelativeLayout>